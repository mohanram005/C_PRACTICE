// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    
    int a = 6;
    for(int i=0;i<a;i++){
        
        int x=a-i-1;
        for(int k=0;k<x;k++){
            printf(" ");
        }
        
        for(int j=0;j<i+1;j++){
            printf(" ");
            printf("*");
        }
        printf("\n");
            

    }
    

    return 0;
}
